<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="magenest_banner" resource="default" engine="innodb" comment="Magenest Banner Table">
        
        <column xsi:type="int" name="banner_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Banner Name"/>
        
        <column xsi:type="smallint" name="status" padding="6" nullable="false" default="1" comment="Banner Status"/>
        
        <column xsi:type="varchar" name="title" nullable="true" length="255" comment="Banner Title"/>
        
        <column xsi:type="varchar" name="image" nullable="true" length="255" comment="Banner Image Path"/>
        
        <column xsi:type="varchar" name="link" nullable="true" length="255" comment="Target URL"/>
        
        <column xsi:type="text" name="content" nullable="true" comment="Additional Text"/>
        
        <column xsi:type="varchar" name="position" nullable="true" length="50" comment="Position: left or right"/>

        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Update Time"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="banner_id"/>
        </constraint>
    </table>
</schema>