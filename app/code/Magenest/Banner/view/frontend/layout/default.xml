            <block class="Magento\Framework\View\Element\Template" name="magenest.banner.display" template="Magenest_Banner::display.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="magenest-banner-component" xsi:type="array">
                                <item name="component" xsi:type="string">Magenest_Banner/js/banner-display</item>
