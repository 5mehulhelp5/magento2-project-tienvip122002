<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">


                <resource id="Magento_Backend::content">
                    <resource id="Magenest_Movie::movie_root" title="Movie" sortOrder="10">
                        <resource id="Magenest_Movie::movie_manage" title="Movies" sortOrder="10"/>
                        <resource id="Magenest_Movie::director_manage" title="Directors" sortOrder="20"/>
                        <resource id="Magenest_Movie::actor_manage" title="Actors" sortOrder="30"/>
                    </resource>
                </resource>

                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magenest_Movie::config_movie"
                                      title="Movie Section" />
                        </resource>
                    </resource>
                </resource>


            </resource>
        </resources>
    </acl>
</config>
