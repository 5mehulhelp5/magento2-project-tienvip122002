<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- 1. Data Provider for Movie Grid -->
    <virtualType name="MagenestMovieGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">MagenestMovieGridCollection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">MagenestMovieGridFilterPool</argument>
        </arguments>
    </virtualType>

    <!-- 2. Filter Pool -->
    <virtualType name="MagenestMovieGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- 3. Grid Collection Virtual Type (Renamed to avoid conflict) -->
    <virtualType name="MagenestMovieGridCollection"
                type="Magenest\Movie\Model\ResourceModel\Movie\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">magenest_movie</argument>
            <argument name="resourceModel" xsi:type="string">Magenest\Movie\Model\ResourceModel\Movie</argument>
        </arguments>
    </virtualType>


    <!-- 4. Link Collection to Data Source -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="magenest_movie_listing_data_source" xsi:type="string">MagenestMovieGridCollection</item>
            </argument>
        </arguments>
    </type>
</config>